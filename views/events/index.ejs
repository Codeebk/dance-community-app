<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper teal">
        <a href="" class="brand-logo left">Austin Dance Events</a>
        <ul class="right">
            <li class="red lighten-3">
                <% if (user) { %>
                  <a href= "events/new"><i class="material-icons left"></i>Add Event</a>
               <% } %>
              </li>
          <li>
          <% if (user) { %>
              <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
          <% } else { %>
              <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
          <% } %>
          </li>
        </ul>
      </div>
    </nav>
  </div>

  <div class="row">
      <div class="col s4 right">
        <div class="card grey lighten-2">
          <span class="card-title">Welcome to Austin Dance Events!</span>
          <p>
            A place where you can learn about keep up with all dance related events in Austin, TX. Please sign in to create an event.
          </p>
        </div>
        </div>
        <!-- </div> -->


  <% event.forEach(function(e) { %>
  <!-- <div class="row"> -->
      <div class="col s8">
        <div class="card teal darken-3">
          <div class="card-content black-text">
            <span class="card-title"><%= e.title %></span>
            <p>Choreographer: <%= e.choreographer %></p>
            <p>Company: <%= e.company %></p>
            <p>Date: <%= e.date %></p>
            <p>Time: <%= e.time %></p>
            <p>Location: <%= e.location %></p>
            <blockquote>Description: <%= e.description %></blockquote>
          </div>
          <% if (user) { %>
          <div class="card-action">
              <a href="/events/<%= e._id %>">Edit/Delete</a>
            <% } %> 
          </div>
        </div>
      <!-- </div> -->
    </div>
    <% }); %>
  </div>





