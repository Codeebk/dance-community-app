<h3>Create a New Event</h3>

<div class="row">
    <form class="col s12" method="POST" action="/events">
      <div class="row">
        <div class="input-field col s6">
          <input type="text" name="title" class="validate">
          <label for="title">Performance Title</label>
        </div>
        <div class="input-field col s6">
          <input id="company_name" type="text" name="company" class="validate">
          <label for="company_name">Company Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input id="choreographer" type="text" name ="choreographer"class="validate">
          <label for="choreographer">Choreographer/s</label>
        </div>

        <div class="input-field col s6">
          <input id="location" type="text" name="location" class="validate" placeholder="Please enter a full address">
          <label for="location">Location</label>
        </div>
     
      
      <div class="row">
        <div class="input-field col s12">
          <input id="description" type="text" name="description" class="validate">
          <label for="description">Description</label>
        </div>
      </div>
      <div class="row">
            <div class="input-field col s6">
              <input id="date" type="date" name="date" class="validate">
              <label for="date">Date</label>
            </div>
            <div class="input-field col s6">
              <input id="time" type="time" name="time" class="validate">
              <label for="time">Time</label>
            </div>
          </div>
      <div class="row">
      </div>
      <div>  <button class="btn waves-effect waves-light" type="submit" name="action">Post Event
        <i class="material-icons left">add</i>
      </button></div>
    </form>
  </div>
        